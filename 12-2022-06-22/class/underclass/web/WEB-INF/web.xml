<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet><!--注册-->
        <servlet-name>LoginServlet</servlet-name><!--注册名-->
        <servlet-class>ning.ying.servlet.LoginServlet</servlet-class><!--注册位置-->
    </servlet>
    <servlet-mapping><!--挂牌-->
        <servlet-name>LoginServlet</servlet-name><!--登记名-->
        <url-pattern>/LoginServlet</url-pattern><!--浏览器访问方式-->
    </servlet-mapping>
    <servlet><!--注册-->
        <servlet-name>YesServlet</servlet-name><!--注册名-->
        <servlet-class>ning.ying.servlet.YesServlet</servlet-class><!--注册位置-->
    </servlet>
    <servlet-mapping><!--挂牌-->
        <servlet-name>YesServlet</servlet-name><!--登记名-->
        <url-pattern>/YesServlet</url-pattern><!--浏览器访问方式-->
    </servlet-mapping>
    <filter><!--过滤器-->
        <filter-name>EncodingFilter</filter-name><!--注册名-->
        <filter-class>ning.ying.filter.EncodingFilter</filter-class><!--注册地址-->
    </filter>
    <filter-mapping><!--挂牌/映射-->
        <filter-name>EncodingFilter</filter-name><!--登记名-->
        <url-pattern>/*</url-pattern><!--给那些类型用-->
    </filter-mapping>
    <filter><!--过滤器-->
        <filter-name>LoginFilter</filter-name><!--注册名-->
        <filter-class>ning.ying.filter.LoginFilter</filter-class><!--注册地址-->
    </filter>
    <filter-mapping><!--挂牌/映射-->
        <filter-name>LoginFilter</filter-name><!--登记名-->
        <servlet-name>LoginServlet</servlet-name>
    </filter-mapping>
</web-app>