<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--加载页面-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <!--过滤器-->
    <filter><!--生命周期-->
        <filter-name>TestFilter</filter-name>
        <filter-class>ning.ying.filter.TestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter><!--字符编码格式-->
        <filter-name>EncodeFilter</filter-name>
        <filter-class>ning.ying.filter.EncodeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter><!--保护页面-->
        <filter-name>SaveFilter</filter-name>
        <filter-class>ning.ying.filter.SaveFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SaveFilter</filter-name>
        <url-pattern>/save/*</url-pattern>
    </filter-mapping>
    <!--服务器-->
    <servlet><!--注册-->
        <servlet-name>LoginServlet</servlet-name><!--注册名-->
        <servlet-class>ning.ying.servlet.LoginServlet</servlet-class><!--注册位置-->
    </servlet>
    <servlet-mapping><!--挂牌-->
        <servlet-name>LoginServlet</servlet-name><!--登记名-->
        <url-pattern>/LoginServlet</url-pattern><!--浏览器访问方式-->
    </servlet-mapping>
</web-app>