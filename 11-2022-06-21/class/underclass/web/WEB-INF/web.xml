<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet><!--注册-->
        <servlet-name>UserServlet</servlet-name><!--注册名-->
        <servlet-class>ning.ying.servlet.UserServlet</servlet-class><!--注册位置-->
    </servlet>
    <servlet-mapping><!--挂牌-->
        <servlet-name>UserServlet</servlet-name><!--登记名-->
        <url-pattern>/UserServlet</url-pattern><!--浏览器访问方式-->
    </servlet-mapping>
</web-app>